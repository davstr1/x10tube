extends layout

block content
  .max-w-md.mx-auto

    h1.text-2xl.font-semibold.text-gray-900.mb-2 Sync your x10s
    p.text-gray-500.mb-8 Paste your user code from another device to access your x10s here.

    if error
      .bg-red-50.border.border-red-200.text-red-700.px-4.py-3.rounded-lg.mb-6.text-sm= error

    if success
      .bg-green-50.border.border-green-200.text-green-700.px-4.py-3.rounded-lg.mb-6.text-sm= success

    form(action="/sync" method="POST")
      .mb-6
        label.block.text-sm.font-medium.text-gray-700.mb-2(for="code") User code
        input.w-full.px-4.py-3.border.border-gray-200.rounded-lg.text-sm.font-mono.focus_outline-none.focus_ring-2.focus_ring-red-500.focus_border-transparent.placeholder-gray-400(
          type="text"
          id="code"
          name="code"
          placeholder="Paste your code here..."
          required
          autocomplete="off"
        )

      button.w-full.bg-red-600.hover_bg-red-700.text-white.px-6.py-3.rounded-lg.text-sm.font-medium.transition-colors(type="submit")
        | Sync

    .mt-8.pt-8.border-t.border-gray-200
      p.text-sm.text-gray-500.mb-2 Your current code on this device:
      .flex.items-center.gap-2
        code#user-code-display.text-sm.font-mono.text-gray-900.bg-gray-100.px-2.py-1.rounded ••••••••••••••••
        button#toggle-code.text-gray-400.hover_text-gray-600(
          type="button"
          title="Show code"
          style="padding: 4px;"
        )
          //- Eye open (show when hidden)
          svg#eye-open(fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 18px; height: 18px;")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z")
          //- Eye closed/slashed (show when visible)
          svg#eye-closed(fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 18px; height: 18px; display: none;")
            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21")
        button#copy-code.text-xs.text-blue-600.hover_text-blue-800(
          type="button"
        ) Copy

  script.
    (function() {
      const userCode = '#{userCode}';
      const display = document.getElementById('user-code-display');
      const toggleBtn = document.getElementById('toggle-code');
      const copyBtn = document.getElementById('copy-code');
      const eyeOpen = document.getElementById('eye-open');
      const eyeClosed = document.getElementById('eye-closed');
      let visible = false;

      toggleBtn.addEventListener('click', function() {
        visible = !visible;
        display.textContent = visible ? userCode : '••••••••••••••••';
        toggleBtn.title = visible ? 'Hide code' : 'Show code';
        eyeOpen.style.display = visible ? 'none' : 'block';
        eyeClosed.style.display = visible ? 'block' : 'none';
      });

      copyBtn.addEventListener('click', function() {
        navigator.clipboard.writeText(userCode);
        copyBtn.textContent = 'Copied!';
        setTimeout(function() { copyBtn.textContent = 'Copy'; }, 1500);
      });
    })();
