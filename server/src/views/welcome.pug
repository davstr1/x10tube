extends layout

block content
  section.text-center.mb-8
    .flex.justify-center.mb-4
      svg(viewBox="0 0 100 100" style="width: 48px; height: 48px;")
        path(d="M35 50 L72 29 A37 37 0 1 0 72 71 Z" fill="#dc2626")
        circle(cx="65" cy="50" r="6" fill="#ffffff")
        circle(cx="82" cy="50" r="6" fill="#ffffff")
    h1.text-xl.font-semibold.text-text-primary.mb-2 You're all set.
    p.text-text-secondary Here's how to use StraightToYourAI.

  //- Method 1: Pin it (Recommended)
  section.mb-6.p-5.bg-surface.border.border-border-strong.rounded-lg
    .flex.items-center.gap-2.mb-3
      h2.text-base.font-medium.text-text-primary Pin it to your toolbar
      span.text-xs.bg-red-600.text-white.px-2.py-0.5.rounded Recommended
    p.text-sm.text-text-secondary.mb-4 Keep the extension one click away. Click the puzzle icon in Chrome, then pin StraightToYourAI.
    .bg-surface-alt.rounded.p-4.text-center
      .flex.items-center.justify-center.gap-3.text-sm.text-text-muted
        .flex.items-center.gap-2
          //- Puzzle icon
          svg.text-text-secondary(xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
            path(d="M19.439 7.85c-.049.322.059.648.289.878l1.568 1.568c.47.47.706 1.087.706 1.704s-.235 1.233-.706 1.704l-1.611 1.611a.98.98 0 0 1-.837.276c-.47-.07-.802-.48-.968-.925a2.501 2.501 0 1 0-3.214 3.214c.446.166.855.497.925.968a.979.979 0 0 1-.276.837l-1.61 1.61a2.404 2.404 0 0 1-1.705.707 2.402 2.402 0 0 1-1.704-.706l-1.568-1.568a1.026 1.026 0 0 0-.877-.29c-.493.074-.84.504-1.02.968a2.5 2.5 0 1 1-3.237-3.237c.464-.18.894-.527.967-1.02a1.026 1.026 0 0 0-.289-.877l-1.568-1.568A2.402 2.402 0 0 1 1.998 12c0-.617.236-1.234.706-1.704L4.23 8.77c.24-.24.581-.353.917-.303.515.077.877.528 1.073 1.01a2.5 2.5 0 1 0 3.259-3.259c-.482-.196-.933-.558-1.01-1.073-.05-.336.062-.676.303-.917l1.525-1.525A2.402 2.402 0 0 1 12 1.998c.617 0 1.234.236 1.704.706l1.568 1.568c.23.23.556.338.877.29.493-.074.84-.504 1.02-.968a2.5 2.5 0 1 1 3.237 3.237c-.464.18-.894.527-.967 1.02Z")
          span Click puzzle
        span.text-text-muted →
        .flex.items-center.gap-2
          //- Pin icon
          svg.text-text-secondary(xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
            line(x1="12" y1="17" x2="12" y2="22")
            path(d="M5 17h14v-1.76a2 2 0 0 0-1.11-1.79l-1.78-.9A2 2 0 0 1 15 10.76V6h1a2 2 0 0 0 0-4H8a2 2 0 0 0 0 4h1v4.76a2 2 0 0 1-1.11 1.79l-1.78.9A2 2 0 0 0 5 15.24Z")
          span Pin StraightToYourAI
        span.text-text-muted →
        .flex.items-center.gap-2
          svg(viewBox="0 0 100 100" style="width: 20px; height: 20px;")
            path(d="M35 50 L72 29 A37 37 0 1 0 72 71 Z" fill="#dc2626")
            circle(cx="65" cy="50" r="6" fill="#ffffff")
            circle(cx="82" cy="50" r="6" fill="#ffffff")
          span Ready!

  //- Method 2: Right-click
  section.mb-6.p-5.bg-surface.border.border-border-default.rounded-lg
    h2.text-base.font-medium.text-text-primary.mb-3 Right-click on any page
    p.text-sm.text-text-secondary.mb-4 Right-click anywhere and select "Send to my AI" from the context menu.
    .bg-surface-alt.rounded.p-4.text-center
      .inline-block.text-left.bg-surface.border.border-border-default.rounded.shadow-lg.py-2.px-1
        .px-3.py-1.text-sm.text-text-muted Back
        .px-3.py-1.text-sm.text-text-muted Forward
        .px-3.py-1.text-sm.text-text-muted Reload
        .border-t.border-border-default.my-1
        .px-3.py-1.text-sm.text-text-primary.bg-surface-hover.rounded.flex.items-center.gap-2
          svg(viewBox="0 0 100 100" style="width: 14px; height: 14px;")
            path(d="M35 50 L72 29 A37 37 0 1 0 72 71 Z" fill="#dc2626")
            circle(cx="65" cy="50" r="6" fill="#ffffff")
            circle(cx="82" cy="50" r="6" fill="#ffffff")
          span Send to my AI

  //- Method 3: Keyboard shortcut
  section.mb-6.p-5.bg-surface.border.border-border-default.rounded-lg
    h2.text-base.font-medium.text-text-primary.mb-3 Keyboard shortcut
    p.text-sm.text-text-secondary.mb-4 Press the shortcut from any page to instantly open the extension.
    .bg-surface-alt.rounded.p-4.text-center
      .flex.items-center.justify-center.gap-2
        kbd.bg-surface.border.border-border-strong.rounded.px-3.py-1.5.text-sm.font-mono.text-text-primary Alt
        span.text-text-muted +
        kbd.bg-surface.border.border-border-strong.rounded.px-3.py-1.5.text-sm.font-mono.text-text-primary Shift
        span.text-text-muted +
        kbd.bg-surface.border.border-border-strong.rounded.px-3.py-1.5.text-sm.font-mono.text-text-primary A
    p.text-xs.text-text-muted.mt-3.text-center
      | Customize it in #[a.underline(href="chrome://extensions/shortcuts" target="_blank") chrome://extensions/shortcuts]

  //- Footer
  section.text-center.pt-4.border-t.border-border-default
    p.text-sm.text-text-secondary That's it. Enjoy!
