mixin extensionRequired()
  #extension-not-installed.hidden.bg-surface.border.border-border-strong.rounded-xl.text-center(style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 100; padding: 3rem 4rem; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);")
    p.text-text-secondary.mb-6.text-lg Install the extension to get started.
    a.inline-flex.items-center.gap-3.bg-surface-alt.hover_bg-surface-hover.border.border-border-strong.hover_border-red-600.rounded-lg.px-6.py-4.transition-colors(href=chromeExtensionUrl target="_blank" rel="noopener noreferrer")
      img(src="https://www.google.com/chrome/static/images/chrome-logo-m100.svg" alt="Chrome" style="width: 32px; height: 32px;")
      .text-left
        .text-text-primary.font-medium Add to Chrome
        .text-text-muted.text-xs Free Â· No account needed

  script.
    (function() {
      // Check if extension is installed (it adds data-stya-extension attribute)
      setTimeout(function() {
        if (!document.documentElement.hasAttribute('data-stya-extension')) {
          var banner = document.getElementById('extension-not-installed');
          banner.classList.remove('hidden');
          // Blur all siblings after the banner
          var sibling = banner.nextElementSibling;
          while (sibling) {
            sibling.style.filter = 'blur(4px)';
            sibling.style.pointerEvents = 'none';
            sibling.style.userSelect = 'none';
            sibling = sibling.nextElementSibling;
          }
        }
      }, 500);
    })();
